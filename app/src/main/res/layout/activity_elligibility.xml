<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_gradient_bkg"
    tools:context="com.example.rahat.campuselligibility.Elligibility">

    <TextView
        android:id="@+id/du"
        android:layout_width="119dp"
        android:layout_height="82dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="DU"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/dustatus"
        android:layout_width="106dp"
        android:layout_height="71dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="16dp"
        android:text="NO"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/JU"
        android:layout_width="120dp"
        android:layout_height="86dp"
        android:layout_marginLeft="16dp"
        android:text="JU"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/du" />

    <TextView
        android:id="@+id/justatus"
        android:layout_width="100dp"
        android:layout_height="83dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="49dp"
        android:text=" NO"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dustatus"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
