<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rahat.bot.com.example.fivefingerbot.bot.YearSelection">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        android:background="@drawable/radial_gradient_bkg"

        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add One Question..!"
                android:textSize="24dp"

                android:background="@color/accent_translucent"
                android:textColor="@android:color/white"
                android:id="@+id/y16"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DU KA Unit Admission Test 2016-2017"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/y17"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DU KA Unit Admission Test 2015-2016"
                android:textSize="24dp"
                android:background="@color/accent_translucent"
                android:textColor="@android:color/white"
                android:id="@+id/y15"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DU KA Unit Admission Test 2014-2015"
                android:textSize="24dp"

                android:id="@+id/y14"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DU KA unit Admission Test 2013-2014"
                android:textSize="24dp"

                android:background="@color/accent_translucent"
                android:textColor="@android:color/white"
                android:id="@+id/y13"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Du KA unit Admission Test 2012-2013"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/y12"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Du KA unit Admission Test 2011-2012"
                android:textSize="24dp"



                android:id="@+id/y11"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Du KA unit Admission Test 2010-2011"
                android:textSize="24dp"

                android:background="@color/accent_translucent"
                android:textColor="@android:color/white"
                android:id="@+id/y10"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Du KA unit Admission Test 2009-2010"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/y0"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Du KA unit Admission Test 2008-2009"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/y8"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
